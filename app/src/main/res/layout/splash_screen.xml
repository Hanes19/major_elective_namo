<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0322"
    android:padding="0dp">


    <ImageView

        android:id="@+id/imageView3"
        android:layout_width="800dp"
        android:layout_height="800dp"
        android:src="@drawable/splash_screen_bg"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-128dp"
        tools:layout_editor_absoluteY="-56dp" />

    <TextView
        android:id="@+id/tvAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:fontFamily="@font/raleway_light"
        android:text="School Navigation\nSystem"
        android:textColor="@color/text_white"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/imgLogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgLogo"
        app:layout_constraintTop_toTopOf="@+id/imgLogo" />

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:contentDescription="Logo"
        android:src="@drawable/app_logo"
        app:layout_constraintEnd_toStartOf="@+id/tvAppName"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:fontFamily="sans-serif-thin"
        android:text="Let's Get"
        android:textColor="@color/text_white"
        android:textSize="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgLogo" />

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-25dp"
        android:fontFamily="sans-serif-light"
        android:text="Started!"
        android:textColor="@color/colorAccent"
        android:textSize="64dp"
        app:layout_constraintStart_toStartOf="@+id/tvTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

    <Button
        android:fontFamily="@font/raleway_bold"
        android:id="@+id/btnSignIn"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/btn_gradient"
        app:backgroundTint="@null"
        android:text="SIGN IN"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/text_white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tvTitle"
        app:layout_constraintEnd_toEndOf="@+id/tvTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvSubtitle" />

    <TextView
        android:id="@+id/tvOrLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="OR SIGN IN WITH"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:letterSpacing="0.1"
        app:layout_constraintTop_toBottomOf="@+id/btnSignIn"
        app:layout_constraintStart_toStartOf="@+id/btnSignIn"
        app:layout_constraintEnd_toEndOf="@+id/btnSignIn" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/tvOrLabel"
        app:layout_constraintStart_toStartOf="@+id/tvOrLabel"
        app:layout_constraintEnd_toEndOf="@+id/tvOrLabel">

        <ImageButton
            android:id="@+id/btnEmail"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/bg_circle_pink"
            android:src="@drawable/mail_icon"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:contentDescription="Email Login"
            app:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/btnPhone"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_circle_pink"
            android:src="@drawable/phone_icon"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:contentDescription="Phone Login"
            app:tint="@android:color/white" />

    </LinearLayout>

    <!-- Footer: Divider and Sign Up -->

    <!-- Divider Line -->
    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginBottom="24dp"
        android:background="#20FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/tvFooterPrompt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.85" />

    <!-- Prompt Text (Chain Head) -->
    <TextView
        android:id="@+id/tvFooterPrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="Don't have an account?"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvSignUp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Sign Up Link (Chain Tail) -->
    <TextView
        android:id="@+id/tvSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="Sign up"
        android:textColor="#A9016D"
        android:textStyle="bold"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvFooterPrompt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvFooterPrompt"
        app:layout_constraintTop_toTopOf="@+id/tvFooterPrompt" />

    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</androidx.constraintlayout.widget.ConstraintLayout>