<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#363250"> <!-- Main Background Color -->

    <!-- Scrollable Content Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation_bar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <!-- HEADER -->
            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/app_logo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_app_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="School Navigation\nSystem"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:fontFamily="@font/raleway_light"
                app:layout_constraintStart_toEndOf="@id/img_logo"
                app:layout_constraintTop_toTopOf="@id/img_logo"
                app:layout_constraintBottom_toBottomOf="@id/img_logo"/>

            <ImageView
                android:id="@+id/img_settings"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/db_settings_ic"
                app:tint="#FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/img_logo"
                app:layout_constraintBottom_toBottomOf="@id/img_logo"/>

            <!-- SEARCH BAR -->
            <LinearLayout
                android:id="@+id/search_container"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/dashboard_button_background"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_app_title">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/db_search_ic"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:fontFamily="@font/raleway_light"
                    android:text="Search Room or Instructor"
                    android:textColor="#ffff"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- GRID MENU (2x2) -->
            <!-- Item 1: Rooms -->
            <LinearLayout
                android:id="@+id/card_rooms"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/dashboard_button_background"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                app:layout_constraintEnd_toStartOf="@+id/card_instructors"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/search_container">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/db_rooms_ic"
                    app:tint="#FFFFFF"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/raleway_light"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Rooms"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- Item 2: Instructors -->
            <LinearLayout
                android:id="@+id/card_instructors"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/dashboard_button_background"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/card_rooms"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/card_rooms"
                app:layout_constraintTop_toTopOf="@+id/card_rooms">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/db_instructors_Ic"
                    app:tint="#FFFFFF"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/raleway_light"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Instructors"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- Item 3: Start Navigation (PINK) -->
            <LinearLayout
                android:id="@+id/card_nav"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/btn_gradient"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                app:layout_constraintEnd_toStartOf="@+id/card_profile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_rooms">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/db_nav_icon"
                    app:tint="#FFFFFF"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Start Navigation"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:fontFamily="@font/raleway_regular"/>
            </LinearLayout>

            <!-- Item 4: Profile -->
            <LinearLayout
                android:id="@+id/card_profile"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/dashboard_button_background"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/card_nav"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/card_nav"
                app:layout_constraintTop_toTopOf="@+id/card_nav">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/db_profile_ic"
                    app:tint="#FFFFFF"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/raleway_light"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Profile"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    />
            </LinearLayout>

            <!-- SUGGESTIONS SECTION -->
            <TextView
                android:id="@+id/tv_suggestions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Suggestions"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:fontFamily="@font/raleway_bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_nav"/>

            <!-- List Item 1 -->
            <RelativeLayout
                android:id="@+id/item_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/tv_suggestions">

                <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/raleway_light"
                    android:layout_height="wrap_content"
                    android:text="Room Computer Lab 3"
                    android:textColor="#E0E0E0"
                    android:textSize="16sp"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/dashboard_arrowRight_icon"
                    android:rotation="0"
                    app:tint="#FFFFFF"/>
            </RelativeLayout>

            <!-- List Item 2 -->
            <RelativeLayout
                android:id="@+id/item_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/item_1">

                <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/raleway_light"
                    android:layout_height="wrap_content"
                    android:text="Professor Marcelo Dupalco"
                    android:textColor="#E0E0E0"
                    android:textSize="16sp"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/dashboard_arrowRight_icon"
                    app:tint="#FFFFFF"/>
            </RelativeLayout>

            <!-- List Item 3 -->
            <RelativeLayout
                android:id="@+id/item_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:paddingBottom="24dp"
                app:layout_constraintTop_toBottomOf="@id/item_2">

                <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/raleway_light"
                    android:layout_height="wrap_content"
                    android:text="Room 103"
                    android:textColor="#E0E0E0"
                    android:textSize="16sp"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/dashboard_arrowRight_icon"
                    app:tint="#FFFFFF"/>
            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <View
        android:id="@+id/nav_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation_bar" />
    <!-- BOTTOM NAVIGATION -->
    <LinearLayout
        android:id="@+id/bottom_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#363250"
        android:orientation="horizontal"
        android:gravity="center"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Home Tab -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="3dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/db_home_ic"
                app:tint="#FFFFFF"
                android:padding="3dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Home"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/raleway_regular"/>
        </LinearLayout>

        <!-- Navigation Tab -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/db_nav_icon"
                app:tint="#FFFFFF"
                android:padding="3dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Navigation"
                android:textSize="12sp"
                android:textColor="#ffff"
                android:fontFamily="@font/raleway_regular"/>
        </LinearLayout>

        <!-- Profile Tab -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/db_profile_ic"
                app:tint="#FFFFFF"
                android:padding="3dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Profile"
                android:textSize="12sp"
                android:textColor="#ffff"
                android:fontFamily="@font/raleway_regular"/>
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>