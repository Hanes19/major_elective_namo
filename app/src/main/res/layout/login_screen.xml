<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_bg">

    <ImageView
        android:id="@+id/imgBackground"
        android:layout_width="800dp"
        android:layout_height="800dp"
        android:alpha="0.5"
        android:contentDescription="Background Map"
        android:src="@drawable/splash_screen_bg"
        tools:ignore="HardcodedText,MissingConstraints"
        tools:layout_editor_absoluteX="-163dp"
        tools:layout_editor_absoluteY="-354dp" />

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/back_btn"
        android:contentDescription="Back"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="4dp"
        android:scaleType="fitCenter"
        app:tint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginStart="24dp"
        tools:ignore="HardcodedText" />

    <!-- Title Section -->
    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:textColor="@color/white"
        android:textSize="64dp"
        android:fontFamily="sans-serif-light"
        android:layout_marginTop="24dp"
        android:layout_marginStart="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        tools:ignore="HardcodedText,SpUsage" />

    <TextView
        android:id="@+id/tvBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="-20dp"
        android:text="Back!"
        android:textColor="@color/accent_pink"
        android:textSize="64dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvWelcome"
        tools:ignore="HardcodedText,SpUsage" />

    <LinearLayout
        android:id="@+id/inputContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        app:layout_constraintTop_toBottomOf="@id/tvBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Email Input Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/input_field_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="16dp">

            <!-- Fixed size icon (24dp) to prevent it from being "too big" -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/email_txtbox_ic"
                app:tint="@color/white"
                android:contentDescription="Email Icon"
                android:padding="3dp"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="Email Address"
                android:importantForAutofill="no"
                android:textColorHint="@color/hint_text"
                android:textColor="@color/white"
                android:inputType="textEmailAddress"
                android:paddingStart="12dp"
                android:maxLines="1"
                android:gravity="center_vertical"
                android:textSize="15sp"
                tools:ignore="HardcodedText,RtlSymmetry" />
        </LinearLayout>

        <!-- Password Input Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/input_field_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="8dp">

            <!-- Fixed size icon (24dp) -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/pswrd_txbox_ic"
                app:tint="@color/white"
                android:contentDescription="Lock Icon"
                android:padding="3dp"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="Password"
                android:textColorHint="@color/hint_text"
                android:textColor="@color/white"
                android:inputType="textPassword"
                android:paddingStart="12dp"
                android:maxLines="1"
                android:gravity="center_vertical"
                android:textSize="15sp"
                tools:ignore="Autofill,HardcodedText,RtlSymmetry" />

            <!-- Toggle Button -->
            <ImageButton
                android:id="@+id/btnTogglePass"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:padding="10dp"
                android:src="@drawable/pswrd_view_txtbox_ic"
                app:tint="@color/hint_text"
                tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        </LinearLayout>

    </LinearLayout>

    <!-- Login Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="LOG IN"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/btn_gradient"
        android:layout_marginTop="32dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inputContainer"
        android:gravity="center"
        android:textSize="15sp"
        tools:ignore="HardcodedText" />

    <!-- Forgot Password -->
    <TextView
        android:id="@+id/tvForgotPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:minHeight="48dp"
        android:text="Forgot Password?"
        android:textColor="@color/hint_text"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnLogin"
        tools:ignore="HardcodedText" />

    <!-- Sign Up Link -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account? "
            android:textColor="@color/hint_text"
            android:gravity="center_vertical"
            android:textSize="15sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tvSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:textStyle="bold"
            android:textColor="@color/accent_pink"
            android:gravity="center_vertical"
            android:textSize="15sp"
            tools:ignore="HardcodedText" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>