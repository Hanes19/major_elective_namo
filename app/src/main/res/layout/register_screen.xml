<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_bg">

    <!-- Fixed Background Image -->
    <ImageView
        android:id="@+id/imgBackground"
        android:layout_width="800dp"
        android:layout_height="800dp"
        android:src="@drawable/splash_screen_bg"
        android:alpha="0.5"
        android:contentDescription="Background Map"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="-165dp"
        android:layout_marginTop="-355dp" />

    <!-- Back Arrow Button -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/back_btn"
        android:contentDescription="Back"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="4dp"
        android:scaleType="fitCenter"
        app:tint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginStart="24dp"/>

    <!-- Title Section: "Create an" -->
    <TextView
        android:id="@+id/tvTitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create an"
        android:textColor="@color/white"
        android:textSize="64dp"
        android:fontFamily="@font/raleway_light"
        android:layout_marginTop="24dp"
        android:layout_marginStart="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBack" />

    <!-- Title Section: "Account!" -->
    <TextView
        android:id="@+id/tvTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account!"
        android:textColor="@color/accent_pink"
        android:fontFamily="@font/raleway_semibold"
        android:textSize="64dp"
        android:textStyle="bold"
        android:layout_marginStart="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle1" />

    <!-- Inputs Container -->
    <LinearLayout
        android:id="@+id/inputContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="32dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 1. Username Input Row (NEW) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/input_field_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/username_txtbox_icon"
                app:tint="@color/white"
                android:contentDescription="User Icon" />

            <EditText
                android:id="@+id/etUsername"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="Username"
                android:textColorHint="@color/hint_text"
                android:textColor="@color/white"
                android:inputType="textPersonName"
                android:paddingStart="12dp"
                android:maxLines="1" />
        </LinearLayout>

        <!-- 2. Email Input Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/input_field_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/email_txtbox_icon"
                app:tint="@color/white"
                android:contentDescription="Email Icon" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="Email Address"
                android:textColorHint="@color/hint_text"
                android:textColor="@color/white"
                android:inputType="textEmailAddress"
                android:paddingStart="12dp"
                android:maxLines="1" />
        </LinearLayout>

        <!-- 3. Password Input Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/input_field_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="8dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/password_txtbox_icon"
                app:tint="@color/white"
                android:contentDescription="Lock Icon" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="Password"
                android:textColorHint="@color/hint_text"
                android:textColor="@color/white"
                android:inputType="textPassword"
                android:paddingStart="12dp"
                android:maxLines="1" />

            <ImageButton
                android:id="@+id/btnTogglePass"
                android:scrollbarSize="@android:dimen/app_icon_size"
                android:src="@drawable/password_view_txtbox_icon"
                app:tint="@color/hint_text"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="15dp"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>

        <!-- 4. Confirm Password Input Row (NEW) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/input_field_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/password_txtbox_icon"
                app:tint="@color/white"
                android:contentDescription="Lock Icon" />

            <EditText
                android:id="@+id/etConfirmPassword"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="Confirm Password"
                android:textColorHint="@color/hint_text"
                android:textColor="@color/white"
                android:inputType="textPassword"
                android:paddingStart="12dp"
                android:maxLines="1" />

            <ImageView
                android:id="@+id/btnToggleConfirmPass"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/password_view_txtbox_icon"
                app:tint="@color/hint_text"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="10dp"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>

    </LinearLayout>

    <!-- Sign Up Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSignUp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="SIGN UP"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/btn_gradient"
        android:layout_marginTop="32dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inputContainer" />

    <!-- Sign In Link -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account? "
            android:textColor="@color/hint_text" />

        <TextView
            android:id="@+id/tvSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:textStyle="bold"
            android:textColor="@color/accent_pink" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>