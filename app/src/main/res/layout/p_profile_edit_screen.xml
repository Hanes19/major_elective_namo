<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3E3851">

    <!-- Top Toolbar (From Reference) -->
    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:padding="4dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:fontFamily="@font/raleway_bold" />

    </RelativeLayout>

    <!-- Bottom Navigation Bar (From Reference) -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="3"
        android:background="#3E3851">

        <!-- Home Item -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home"
                android:padding="3dp"
                app:tint="@color/grey_text"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="@color/grey_text"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/raleway_light"/>
        </LinearLayout>

        <!-- Navigation Item -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_navigation"
                android:padding="3dp"
                app:tint="@color/grey_text"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Navigation"
                android:textColor="@color/grey_text"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/raleway_light"/>
        </LinearLayout>

        <!-- Profile Item (Active) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/profile"
                android:padding="3dp"
                app:tint="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/raleway_light"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Main Content Scroll -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBar"
        android:layout_above="@id/bottomNav"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- Profile Image Section -->
            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="60dp"
                    android:background="@drawable/circle_bg">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/circle_bg"
                        tools:src="@tools:sample/avatars" />
                </androidx.cardview.widget.CardView>

                <!-- Edit Icon Overlay -->
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/bg_rounded_input"
                    android:padding="8dp"
                    android:src="@drawable/p_profile_edit_btn"
                    app:tint="@color/white" />
            </RelativeLayout>

            <!-- Name Field -->
            <TextView
                style="@style/LabelText"
                android:text="Name"
                android:fontFamily="@font/raleway_regular"/>

            <EditText
                android:id="@+id/etName"
                style="@style/InputField"
                android:text="Juan Tamad"
                android:fontFamily="@font/raleway_bold"/>

            <!-- Course Field -->
            <TextView
                style="@style/LabelText"
                android:text="Course"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/raleway_regular"/>

            <EditText
                android:id="@+id/etCourse"
                style="@style/InputField"
                android:text="BSIT"
                android:fontFamily="@font/raleway_bold"/>

            <!-- Year and Section Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:baselineAligned="false">

                <!-- Year -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/LabelText"
                        android:text="Year"
                        android:fontFamily="@font/raleway_regular"/>

                    <EditText
                        android:id="@+id/etYear"
                        style="@style/InputField"
                        android:layout_marginHorizontal="24dp"
                        android:layout_marginEnd="8dp"
                        android:text="3"
                        android:fontFamily="@font/raleway_bold"/>
                </LinearLayout>

                <!-- Section -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/LabelText"
                        android:text="Section"
                        android:fontFamily="@font/raleway_regular"/>

                    <EditText
                        android:id="@+id/etSection"
                        style="@style/InputField"
                        android:layout_marginHorizontal="24dp"
                        android:layout_marginStart="8dp"
                        android:text="A"
                        android:fontFamily="@font/raleway_bold"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Email Field -->
            <TextView
                style="@style/LabelText"
                android:text="Email"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/raleway_regular"/>

            <EditText
                android:id="@+id/etEmail"
                style="@style/InputField"
                android:inputType="textEmailAddress"
                android:text="JTamad@gmail.com"
                android:fontFamily="@font/raleway_bold"/>

            <!-- Phone Field -->
            <TextView
                style="@style/LabelText"
                android:text="Phone"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/raleway_regular"/>

            <EditText
                android:id="@+id/etPhone"
                style="@style/InputField"
                android:inputType="phone"
                android:text="+6391231231231"
                android:fontFamily="@font/raleway_bold"/>

            <!-- Action Buttons Row -->
            <LinearLayout
                android:id="@+id/layoutActions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="24dp"
                android:background="@drawable/bg_rounded_pink_container">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="12dp"
                    android:gravity="center"
                    android:text="Reset\nPassword"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:fontFamily="@font/raleway_bold"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#80FFFFFF"
                    android:layout_marginVertical="8dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="12dp"
                    android:gravity="center"
                    android:text="Forgot\nPassword"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:fontFamily="@font/raleway_bold"/>
            </LinearLayout>

            <!-- Save Button -->
            <Button
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save Changes"
                android:backgroundTint="@color/magenta_accent"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="24dp"
                android:paddingVertical="12dp"
                android:fontFamily="@font/raleway_bold"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>