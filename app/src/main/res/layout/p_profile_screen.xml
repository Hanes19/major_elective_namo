<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#363250">

    <!-- HEADER -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="12dp"
        android:src="@drawable/back_btn"
        app:tint="@color/text_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tvHeaderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:fontFamily="@font/raleway_bold"
        android:textColor="@color/text_white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnBack"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"/>

    <View
        android:id="@+id/dividerHeader"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#3F3B52"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/btnBack"/>

    <!-- SCROLLABLE CONTENT -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/dividerHeader"
        app:layout_constraintBottom_toTopOf="@id/bottomNavDivider">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingHorizontal="32dp"
            android:paddingTop="32dp"
            android:paddingBottom="40dp">

            <!-- Profile Image -->
            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:cardCornerRadius="60dp"
                app:cardBackgroundColor="#D1E4FA"
                app:cardElevation="0dp"
                android:layout_marginBottom="40dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/profile"
                    android:scaleType="centerCrop"
                    android:padding="0dp"/>
            </androidx.cardview.widget.CardView>

            <!-- User Details Table -->
            <!-- Using TableLayout to achieve the specific alignment in the design -->
            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <TableRow android:layout_marginBottom="16dp">
                    <TextView
                        android:text="Name:"
                        android:textColor="#B0B0B0"
                        android:textSize="15sp"
                        android:gravity="end"
                        android:paddingEnd="24dp"
                        android:fontFamily="@font/raleway_light"/>
                    <TextView
                        android:text="Juan Tamad"
                        android:textColor="@color/white"
                        android:fontFamily="@font/raleway_bold"
                        android:textSize="16sp"/>
                </TableRow>

                <TableRow android:layout_marginBottom="16dp">
                    <TextView
                        android:text="Course:"
                        android:textColor="#B0B0B0"
                        android:textSize="15sp"
                        android:gravity="end"
                        android:paddingEnd="24dp"
                        android:fontFamily="@font/raleway_light"/>
                    <TextView
                        android:text="BSIT"
                        android:textColor="@color/white"
                        android:fontFamily="@font/raleway_bold"
                        android:textSize="16sp"/>
                </TableRow>

                <TableRow android:layout_marginBottom="16dp">
                    <TextView
                        android:text="Section:"
                        android:textColor="#B0B0B0"
                        android:textSize="15sp"
                        android:gravity="end"
                        android:paddingEnd="24dp"
                        android:fontFamily="@font/raleway_light"/>
                    <TextView
                        android:text="A"
                        android:textColor="@color/white"
                        android:fontFamily="@font/raleway_bold"
                        android:textSize="16sp"/>
                </TableRow>

                <TableRow android:layout_marginBottom="16dp">
                    <TextView
                        android:text="Year:"
                        android:textColor="#B0B0B0"
                        android:textSize="15sp"
                        android:gravity="end"
                        android:paddingEnd="24dp"
                        android:fontFamily="@font/raleway_light"/>
                    <TextView
                        android:text="3"
                        android:textColor="@color/white"
                        android:fontFamily="@font/raleway_bold"
                        android:textSize="16sp"/>
                </TableRow>

                <TableRow android:layout_marginBottom="16dp">
                    <TextView
                        android:text="Email:"
                        android:textColor="#B0B0B0"
                        android:textSize="15sp"
                        android:gravity="end"
                        android:paddingEnd="24dp"
                        android:fontFamily="@font/raleway_light"/>
                    <TextView
                        android:text="JTamad@gmail.com"
                        android:textColor="@color/white"
                        android:fontFamily="@font/raleway_bold"
                        android:textSize="16sp"/>
                </TableRow>

                <TableRow android:layout_marginBottom="16dp">
                    <TextView
                        android:text="Phone:"
                        android:textColor="#B0B0B0"
                        android:textSize="15sp"
                        android:gravity="end"
                        android:paddingEnd="24dp"
                        android:fontFamily="@font/raleway_light"/>
                    <TextView
                        android:text="+6391231231231"
                        android:textColor="@color/white"
                        android:fontFamily="@font/raleway_bold"
                        android:textSize="16sp"/>
                </TableRow>
            </TableLayout>

            <!-- Edit Button -->
            <!-- Using View (space) to push button to bottom if content is short,
                 or margin top if content is long -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="60dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnEdit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/btn_gradient"
                android:text="Edit"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/raleway_bold"/>

        </LinearLayout>
    </ScrollView>

    <View
        android:id="@+id/bottomNavDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#3F3B52"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"/>

    <!-- BOTTOM NAV -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#363250"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#363250"
            android:orientation="vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/db_home_ic"
                app:tint="#FFFFFF"
                android:padding="3dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Home"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/raleway_regular"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#363250"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/db_profile_ic"
                app:tint="#FFFFFF"
                android:padding="3dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Profile"
                android:textSize="12sp"
                android:textColor="#ffff"
                android:fontFamily="@font/raleway_regular"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#363250"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/db_profile_ic"
                app:tint="#FFFFFF"
                android:padding="3dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Profile"
                android:textSize="12sp"
                android:textColor="#ffff"
                android:fontFamily="@font/raleway_regular"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>