<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0322">

    <!-- 1. BACKGROUND ELEMENTS -->
    <ImageView
        android:id="@+id/imgBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.2"
        android:scaleType="centerCrop"
        android:src="@drawable/splash_screen_bg"
        android:contentDescription="Background" />

    <View
        android:id="@+id/glowEffect"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="-100dp"
        android:background="@drawable/bg_purple_glow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 2. HEADER -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingTop="24dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:src="@drawable/back_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@android:color/white"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway_bold"
            android:text="Enrollment Guide"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/headerDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/glass_divider_line"
        app:layout_constraintTop_toBottomOf="@+id/header" />

    <!-- 3. SCROLLABLE STEP-BY-STEP CONTENT -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@+id/headerDivider"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Follow these physical steps to enroll on campus."
                android:textColor="#B0B0C0"
                android:fontFamily="@font/raleway_medium"
                android:textSize="14sp"
                android:layout_marginBottom="24dp"/>

            <!-- STEP 1: Form Acquisition -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/glass_card_dark"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/step1Num"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/btn_glass_circle"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#A9016D"
                    android:fontFamily="@font/raleway_bold"
                    android:textSize="18sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/step1Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Acquire Enrollment Form"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/raleway_bold"
                    android:textSize="16sp"
                    app:layout_constraintTop_toTopOf="@id/step1Num"
                    app:layout_constraintBottom_toTopOf="@+id/step1Desc"
                    app:layout_constraintStart_toEndOf="@id/step1Num"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintVertical_chainStyle="packed"/>

                <TextView
                    android:id="@+id/step1Desc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Go to the Admissions Office or Registrar Window. Request and fill out the physical enrollment form."
                    android:textColor="#B0B0C0"
                    android:fontFamily="@font/raleway_regular"
                    android:textSize="13sp"
                    app:layout_constraintTop_toBottomOf="@id/step1Title"
                    app:layout_constraintStart_toStartOf="@id/step1Title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Progress Line -->
            <View android:layout_width="2dp" android:layout_height="20dp" android:background="#33A9016D" android:layout_marginStart="43dp"/>

            <!-- STEP 2: Document Submission -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/glass_card_dark"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/step2Num"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/btn_glass_circle"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="#A9016D"
                    android:fontFamily="@font/raleway_bold"
                    android:textSize="18sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/step2Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Submit Required Documents"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/raleway_bold"
                    android:textSize="16sp"
                    app:layout_constraintTop_toTopOf="@id/step2Num"
                    app:layout_constraintBottom_toTopOf="@+id/step2Desc"
                    app:layout_constraintStart_toEndOf="@id/step2Num"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintVertical_chainStyle="packed"/>

                <TextView
                    android:id="@+id/step2Desc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Submit your original Form 138 (Report Card), Birth Certificate, and Good Moral certificate for verification."
                    android:textColor="#B0B0C0"
                    android:fontFamily="@font/raleway_regular"
                    android:textSize="13sp"
                    app:layout_constraintTop_toBottomOf="@id/step2Title"
                    app:layout_constraintStart_toStartOf="@id/step2Title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Progress Line -->
            <View android:layout_width="2dp" android:layout_height="20dp" android:background="#33A9016D" android:layout_marginStart="43dp"/>

            <!-- STEP 3: Department Advising -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/glass_card_dark"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/step3Num"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/btn_glass_circle"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="#A9016D"
                    android:fontFamily="@font/raleway_bold"
                    android:textSize="18sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/step3Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Department Advising"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/raleway_bold"
                    android:textSize="16sp"
                    app:layout_constraintTop_toTopOf="@id/step3Num"
                    app:layout_constraintBottom_toTopOf="@+id/step3Desc"
                    app:layout_constraintStart_toEndOf="@id/step3Num"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintVertical_chainStyle="packed"/>

                <TextView
                    android:id="@+id/step3Desc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Proceed to your respective Dean's Office to have your subjects advised and encoded in the system."
                    android:textColor="#B0B0C0"
                    android:fontFamily="@font/raleway_regular"
                    android:textSize="13sp"
                    app:layout_constraintTop_toBottomOf="@id/step3Title"
                    app:layout_constraintStart_toStartOf="@id/step3Title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Progress Line -->
            <View android:layout_width="2dp" android:layout_height="20dp" android:background="#33A9016D" android:layout_marginStart="43dp"/>

            <!-- STEP 4: Payment and COR -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/glass_card_dark"
                android:padding="20dp"
                android:layout_marginBottom="32dp">

                <TextView
                    android:id="@+id/step4Num"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/btn_glass_circle"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="#A9016D"
                    android:fontFamily="@font/raleway_bold"
                    android:textSize="18sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/step4Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Payment &amp; Finalization"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/raleway_bold"
                    android:textSize="16sp"
                    app:layout_constraintTop_toTopOf="@id/step4Num"
                    app:layout_constraintBottom_toTopOf="@+id/step4Desc"
                    app:layout_constraintStart_toEndOf="@id/step4Num"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintVertical_chainStyle="packed"/>

                <TextView
                    android:id="@+id/step4Desc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Pay your fees at the Cashier. Finally, present your receipt at the Registrar to claim your official COR."
                    android:textColor="#B0B0C0"
                    android:fontFamily="@font/raleway_regular"
                    android:textSize="13sp"
                    app:layout_constraintTop_toBottomOf="@id/step4Title"
                    app:layout_constraintStart_toStartOf="@id/step4Title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Final CTA Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnStartApplication"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/btn_glass_primary"
                android:text="Find Admissions Office"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/raleway_bold"
                android:textSize="16sp"
                android:letterSpacing="0.05" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>